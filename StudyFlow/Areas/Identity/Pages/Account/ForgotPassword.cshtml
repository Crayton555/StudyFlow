@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

    

<div class="text-center" id="forgetPassword">

    <h1><b>Reset Password</b></h1>
    <p>Enter the email associated with your account and we'll send an email with instructions to reset your password.</p>
    
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Input.Email" id="input" placeholder="Email" autocomplete="username" aria-required="true" />
            @*<label asp-for="Input.Email" class="form-label"></label>*@
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn submit bg-purple text-light">Send instructions</button>
    </form>

</div>


<style>
    #forgetPassword {
        background-color: black;
        color: white;
        text-align: center;
    }

    h1 {
        margin-top: 15%;
    }

    .submit {
        display: inline-flex;
        justify-content: center;
        height: 46px;
        border-radius: 15px;
        padding-left: 2%;
        padding-right: 2%;
        margin-bottom: 10%;
        background: #3020E9;
        margin-top: 1%;
    }

        .submit > p {
            margin-left: 10%;
            white-space: nowrap;
            margin-top: 1%;
            color: white;
        }

        .submit > img {
            margin-top: 5%;
        }

    #input {
        margin-top: 1%;
        color: gray;
        background-color: transparent;
        border-radius: 15px;
        border: 1px solid gray;
        width: 30%;
        padding: 12px 12px 12px 20px;
    }

    #forgetPassword > p {
        margin-top: 1%;
        text-align: center;
        width: 34%;
        margin-left: 32%;
    }

    .bg-purple {
        background-color: #29208D !important;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
