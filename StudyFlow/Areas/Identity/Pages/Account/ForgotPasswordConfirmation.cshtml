@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<div class="text-center" id="forgetPasswordCheck">

    <img src="~/resources/undraw_mail_sent_re_0ofv 1.png">
    <h1><b>Check your email</b></h1>
    <p>We have sent a password recovery instructions to your email.</p>
    @*<button class="btn btnSubmit bg-purple text-light">Open email app</button>*@

</div>

<style>
    #forgetPasswordCheck {
        background-color: black;
        color: white;
        text-align: center;
    }

        #forgetPasswordCheck > img {
            margin-top: 5%;
        }

        #forgetPasswordCheck > p {
            margin-top: 1%;
        }

    h1 {
        margin-top: 1%;
    }

    .btnSubmit {
        display: inline-flex;
        justify-content: center;
        height: 46px;
        border-radius: 15px;
        padding-left: 2%;
        padding-right: 2%;
        margin-bottom: 10%;
        background: #3020E9;
        margin-top: 1%;
    }

        .btnSubmit > p {
            margin-left: 10%;
            white-space: nowrap;
            margin-top: 1%;
            color: white;
        }

        .btnSubmit > img {
            margin-top: 5%;
        }

    .bg-purple {
        background-color: #29208D !important;
    }
</style>

