@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="container justify-content-center mt-5">

    <div class="row">
        <div class="col-md-5">
            <h1>Create new account</h1>
            <p class="text-grey mt-4 mb-4">Already a member? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-purple">Sign in</a></p>
            
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group pt-1 pb-1 mb-1">
                    <div class="pt-1 pb-1">
                        <input asp-for="Input.Email" autocomplete="username" aria-required="true" type="text" placeholder="Email" class="input"  />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group pt-1 pb-1 mb-1">
                    <div class="pt-1 pb-1">
                        <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" type="password" placeholder="Password" class="input"  />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group pt-1 pb-1 mb-1">
                    <div class="pt-1 pb-1">
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" type="password" placeholder="Confirm password" class="input" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group">
                    <div class="row mt-5">
                        <div class="col-sm-6 text-left">
                        </div>
                        <div class="col-sm-6 text-right">
                            <button id="registerSubmit" type="submit" class="btn bg-purple text-light pl-3 pr-3">CREATE ACCOUNT</button>
                        </div>
                    </div>


                </div>
            </form>

        </div>

        <div class="col-md-1">
        </div>

        <div class="col-md-6">

            <img src="~/resources/register.png" height="480" width="520" />
        </div>
    </div>


</div>



<style>
    body {
        background-color: black !important;
        color: white !important;
    }

    .input {
        margin-top: 1%;
        color: gray;
        background-color: transparent;
        border-radius: 15px;
        border: 1px solid gray;
        padding: 12px 12px 12px 20px;
        width: 100%;
    }

    .check {
        background-color: transparent;
    }

    .text-purple {
        color: #29208D !important;
    }

    .text-grey {
        color: dimgray;
    }

    .bg-purple {
        background-color: #29208D !important;
    }
</style>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
